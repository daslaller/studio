{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "🚀 Start Development Server",
            "type": "npm",
            "script": "dev",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": false
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "."
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "▲ Next.js",
                    "endsPattern": "✓ Ready"
                }
            },
            "isBackground": true
        },
        {
            "label": "🏗️ Build Production",
            "type": "npm",
            "script": "build",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            }
        },
        {
            "label": "🔍 Type Check",
            "type": "npm",
            "script": "typecheck",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            }
        }
    ]
}